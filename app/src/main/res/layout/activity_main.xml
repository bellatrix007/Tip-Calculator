<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TableRow>
            <TextView
                android:text="Bill total"
                android:textSize="24sp"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/bill"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"
                android:layout_span="3"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text=""
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:text="10%"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:text="15%"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:text="20%"
                android:textSize="24sp"
                android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Tip"
                android:layout_gravity="end"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tip1"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tip2"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tip3"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Total"
                android:layout_gravity="end"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/total1"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/total2"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/total3"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Custom"
                android:layout_gravity="end"
                android:textSize="24sp"
                android:padding="8dp"/>

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_span="2"
                android:max="100"
                android:progress="18" />

            <TextView
                android:id="@+id/seekval"
                android:padding="8dp"
                android:text="18%"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Tip"
                android:layout_gravity="end"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tipx"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:text="Total"
                android:textSize="24sp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/totalx"
                android:text="0.0"
                android:textSize="24sp"
                android:padding="8dp"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
